<div class="modal fade" id="rhizome-<%= rhizome.id %>-show" tabindex="-1" role="dialog" aria-labelledby="rhizome-<%= rhizome.id %>-show-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header navbar-inverse">
        <%= button_tag '', class: 'btn btn-sm btn-danger glyphicon glyphicon-remove', 'data-dismiss' => 'modal' %>
        <h4 class="modal-title" id="rhizome-<%= rhizome.id %>-show-label"><%= rhizome.name %></h4>
      </div>
      <div class="modal-body rhizome-info">
        <h3 class="center">Particle Device</h3>
        <div class="table-responsive">
          <table class="rhizome table table-hover">
            <tbody>
              <tr>
                <td><span class="rhizome show_info">Device ID:</span></td>
                <td><%= rhizome.particle_device.device_id %></td>
              </tr>
              <tr>
                <td><span class="rhizome show_info">Access Token:</span></td>
                <td><%= rhizome.particle_device.access_token %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <%= link_to 'Edit',
                    edit_rhizome_path(id: rhizome.id),
                    class: 'btn btn-sm btn-primary',
                    alt: 'Edit',
                    title: 'Edit' %>
        <%= link_to 'Delete',
                    rhizome,
                    method: :delete,
                    data: { confirm: "You sure you want to delete #{rhizome.name}?" },
                    class: 'btn btn-sm btn-primary btn-danger',
                    alt: 'Delete',
                    title: 'Delete' %>
      </div>
    </div>
  </div>
</div>