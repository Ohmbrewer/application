<% provide(:title, 'Add Rhizome') %>
<h1>Add Rhizome</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@rhizome) do |f| %>
        <%= render 'fields', f: f, object: @rhizome %>
        <%= button_tag 'Add', type: :submit, class: 'btn btn-sm btn-primary' %>
        <%= link_to 'Cancel', rhizomes_path, class: 'btn btn-sm btn-danger' %>
    <% end %>
  </div>
</div>
