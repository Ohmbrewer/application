<% provide(:title, @rhizome.name) %>
<div class="row">
  <aside class="col-md-8">
    <section class="rhizome_info">
      <h1>
        <%= @rhizome.name %>
      </h1>
      <h3 class="center">Particle Device</h3>
      <div class="table-responsive">
        <table class="rhizome table table-hover">
          <tbody>
          <tr>
            <td><span class="rhizome show_info">Device ID:</span></td>
            <td><%= @rhizome.particle_device.device_id %></td>
          </tr>
          <tr>
            <td><span class="rhizome show_info">Access Token:</span></td>
            <td><%= @rhizome.particle_device.access_token %></td>
          </tr>
          </tbody>
        </table>
      </div>
    </section>
    <%= link_to 'Edit',
                edit_rhizome_path,
                id: @rhizome.id,
                class: 'btn btn-sm btn-primary',
                alt: 'Edit',
                title: 'Edit' %>
    <%= link_to 'Delete',
                @rhizome,
                method: :delete,
                data: { confirm: 'You sure?' },
                class: 'btn btn-sm btn-danger',
                alt: 'Delete',
                title: 'Delete' %>
    <%= link_to 'Back',
                rhizomes_path,
                class: 'btn btn-sm btn-primary',
                alt: 'Back',
                title: 'Back' %>
  </aside>
</div>