<% provide(:title, 'Prepare a New Batch') %>
<h1>Prepare a New Batch</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@batch) do |f| %>
        <%= render 'shared/error_messages', object: f.object  %>

        <%= f.label :recipe, 'Recipe' %>
        <%= f.select :recipe,
                     Batch.brewable_options,
                     {include_blank: ''},
                     class: 'form-control' %>

        <%= button_tag 'Save', type: :submit, class: 'btn btn-sm btn-primary' %>
        <%= link_to 'Cancel', batches_path, class: 'btn btn-sm btn-danger' %>
    <% end %>
  </div>
</div>
