<% provide(:title, @schedule.name) %>
<div class="row">
  <aside class="col-md-10">
    <section class="schedule_info">
      <h1>
        <%= @schedule.name %>
      </h1>
      <%= render partial: 'schedule_chart_w_warnings', locals: { schedule: @schedule} %>
    </section>
    <%= link_to 'Edit',
                edit_schedule_path,
                id: @schedule.id,
                class: 'btn btn-sm btn-primary',
                alt: 'Edit',
                title: 'Edit' %>
    <%= link_to 'Delete',
                @schedule,
                method: :delete,
                data: { confirm: 'You sure?' },
                class: 'btn btn-sm btn-danger',
                alt: 'Delete',
                title: 'Delete' %>
    <%= link_to 'Back',
                schedules_path,
                class: 'btn btn-sm btn-primary',
                alt: 'Back',
                title: 'Back' %>
  </aside>
</div>