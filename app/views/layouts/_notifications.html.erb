<% flash.each do |message_type, message| %>
    <%= content_tag(:div, class: "alert alert-#{message_type}") do %>
        <%= case message_type
             when 'danger'
               content_tag(:span, '', id: 'flash-glyphicon', class: 'glyphicon glyphicon-alert')
             when 'success'
               content_tag(:span, '', id: 'flash-glyphicon', class: 'glyphicon glyphicon-ok')
             when 'warning'
               content_tag(:span, '', id: 'flash-glyphicon', class: 'glyphicon glyphicon-warning-sign')
             else
               content_tag(:span, '', id: 'flash-glyphicon', class: 'glyphicon glyphicon-info-sign')
           end %>
          <%= sanitize message %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
    <% end %>
<% end %>