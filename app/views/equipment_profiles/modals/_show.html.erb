<div class="modal fade" id="equipment_profile-<%= equipment_profile.id %>-show" tabindex="-1" role="dialog" aria-labelledby="equipment_profile-<%= equipment_profile.id %>-show-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header navbar-inverse">
        <%= button_tag '', class: 'btn btn-sm btn-danger glyphicon glyphicon-remove', 'data-dismiss' => 'modal' %>
        <h4 class="modal-title" id="equipment_profile-<%= equipment_profile.id %>-show-label"><%= equipment_profile.name %></h4>
      </div>
      <div class="modal-body equipment_profile-info">
        <%= render partial: 'equipment_profiles/equipment', locals: {equipment_profile: equipment_profile} %>
      </div>
      <div class="modal-footer">
        <%= link_to 'Edit',
                    edit_equipment_profile_path(id: equipment_profile.id),
                    class: 'btn btn-sm btn-primary',
                    alt: 'Edit',
                    title: 'Edit' %>
        <%= render partial: 'equipments/add_equipment_to_equipment_profile_dropdown', locals: {equipment_profile: equipment_profile} %>
        <%= link_to 'Delete',
                    equipment_profile,
                    method: :delete,
                    data: { confirm: "You sure you want to delete #{equipment_profile.name}?" },
                    class: 'btn btn-sm btn-primary btn-danger',
                    alt: 'Delete',
                    title: 'Delete' %>
      </div>
    </div>
  </div>
</div>